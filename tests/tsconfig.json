{
  "extends": "../tsconfig.base.json",
  "compilerOptions": {
    "baseUrl": "../",
    "paths": {
      "metis/*": ["shared/*"],
      "metis/server": ["server/index.ts"],
      "metis/server/*": ["server/*"],
      "metis/client": ["client/src/index.tsx"],
      "metis/client/*": ["client/src/*"],
      "@metis/*": ["integration/library/*"],
      "@metis/schema/*": ["integration/library/schema/*"],
      "@metis/config/*": ["integration/library/config/*"],
      "@metis/toolbox/*": ["integration/library/toolbox/*"],
      "@metis/api/*": ["integration/library/api/*"]
    },
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "target": "ES2022",
    "types": ["node"],
    "isolatedModules": true
  }
}
