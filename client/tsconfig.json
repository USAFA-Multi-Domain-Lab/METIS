{
  "extends": "../tsconfig.base.json",
  "compilerOptions": {
    "types": ["./src/global.d.ts", "vite/client"],
    "jsx": "react-jsx",
    "baseUrl": ".",
    // Vite/browser ESM settings
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "paths": {
      "src/*": ["src/*"],
      "shared/*": ["../shared/*"],
      "metis/*": ["../shared/*", "src/*"]
    }
  },
  "include": ["src", "src/global.d.ts", "index.html", "../shared/events"]
}
