{
  "name": "metis",
  "description": "METIS uses an ambiguous node-topography and hierarchy structure to build a framework relayed effects from across all war-fighting domains. Designed to be adaptable to a wide verity of use cases, from cyberspace targeting to global logistical operations. As a secondary function, and equally as flexible is the open software design that uses API to perform as a relay hub and/or effects-emitter to link multiple simulation programs and other applications.",
  "version": "2.2.2",
  "private": true,
  "main": "server/start.ts",
  "scripts": {
    "start": "cross-env METIS_ENV_TYPE=prod tsx --tsconfig server/tsconfig.json server/start.ts",
    "dev": "cross-env METIS_ENV_TYPE=dev tsx watch --tsconfig server/tsconfig.json server/start.ts",
    "react": "cd client && vite --config vite.config.ts",
    "build": "cd client && vite build --config vite.config.ts",
    "preview": "cd client && vite preview --config vite.config.ts",
    "create-users": "cross-env METIS_ENV_TYPE=prod tsx --tsconfig server/tsconfig.json server/database/scripts/metis-users/manage-users --create",
    "restore-users": "cross-env METIS_ENV_TYPE=prod tsx --tsconfig server/tsconfig.json server/database/scripts/metis-users/manage-users --restore",
    "delete-users": "cross-env METIS_ENV_TYPE=prod tsx --tsconfig server/tsconfig.json server/database/scripts/metis-users/manage-users --delete",
    "archive-users": "cross-env METIS_ENV_TYPE=prod tsx --tsconfig server/tsconfig.json server/database/scripts/metis-users/manage-users --archive",
    "test": "cross-env METIS_ENV_TYPE=test jest --config tests/jest.config.js",
    "test:e2e": "cross-env METIS_ENV_TYPE=test jest --config tests/jest.config.js --selectProjects=e2e",
    "test:integration:api": "cross-env METIS_ENV_TYPE=test jest --config tests/jest.config.js --selectProjects=integration:api"
  },
  "dependencies": {
    "@tiptap/extension-code-block-lowlight": "^2.11.5",
    "@tiptap/extension-link": "^2.6.6",
    "@tiptap/extension-paragraph": "^2.11.5",
    "@tiptap/extension-placeholder": "^2.11.5",
    "@tiptap/extension-underline": "^2.6.6",
    "@tiptap/pm": "^2.6.6",
    "@tiptap/react": "^2.6.6",
    "@tiptap/starter-kit": "^2.6.6",
    "archiver": "^7.0.1",
    "axios": "^1.6.2",
    "bcryptjs": "^2.4.3",
    "bson": "^6.10.4",
    "connect-mongo": "^4.6.0",
    "cookie-parser": "^1.4.6",
    "cors": "^2.8.5",
    "dateformat": "^5.0.3",
    "dotenv": "^16.4.7",
    "express": "^4.21.2",
    "express-rate-limit": "^7.2.0",
    "express-session": "^1.17.3",
    "express-winston": "^4.2.0",
    "https": "^1.0.0",
    "isomorphic-dompurify": "^1.9.0",
    "lodash": "^4.17.21",
    "lowlight": "^3.3.0",
    "marked": "^15.0.7",
    "memoize-one": "^6.0.0",
