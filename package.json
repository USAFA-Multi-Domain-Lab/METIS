    "pug": "^3.0.2",
    "rate-limiter-flexible": "^5.0.5",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "react-error-boundary": "^4.0.13",
    "sass": "^1.63.6",
    "seedrandom": "^3.0.5",
    "socket.io": "^4.8.0",
    "socket.io-client": "^4.8.1",
    "ts-node": "^10.9.1",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.9.3",
    "unzipper": "^0.12.3",
    "uuid": "^9.0.0",
    "web-vitals": "^2.1.4",
