    "tabWidth": 2,
    "singleQuote": true,
    "jsxSingleQuote": true,
    "semi": false,
    "trailingComma": "all",
    "quoteProps": "consistent"
  },
  "eslintConfig": {
    "extends": [
      "react-app",
