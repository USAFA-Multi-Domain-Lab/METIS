{
  "extends": "../tsconfig.base.json",
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@shared/*": ["../shared/*"],
      "@server/*": ["*"],
      "@integrations/target-env-classes/*": [
        "../integration/library/target-env-classes/*"
      ]
    },
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "target": "ES2022",
    "types": ["node", "./global.d.ts", "../shared/global.d.ts"]
  },
  "include": [".", "../shared/", "../integration/library/"],
  "exclude": ["../integration/library/toolbox/"]
}
