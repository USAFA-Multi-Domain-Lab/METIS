{
  "extends": "../tsconfig.base.json",
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "*": ["node_modules/*"],
      "metis/server": ["index.ts"],
      "metis/server/*": ["*"],
      "metis/*": ["../shared/*"],
      "integration/library/*": ["../integration/library/*"]
    },
    // Node ESM settings
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "target": "ES2022",
    "types": ["node"]
  }
}
